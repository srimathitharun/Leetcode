 class Solution {
    public boolean isPerfectSquare(int n) {
        if (n < 1) return false; 
        long low = 1, high = n;

        while (low <= high) {
            long mid = (low + high) / 2;
            long sq = mid * mid;
            if (sq == n) return true;
            else if (sq < n) low = mid + 1;
            else high = mid - 1;
        }

        return false;
    }
}
