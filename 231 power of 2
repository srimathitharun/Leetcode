class Solution {
    public boolean isPowerOfTwo(int n) {
        if (n <= 0) return false; // Negative numbers and 0 can't be power of two
        
        while (n % 2 == 0) {
            n = n / 2; // Keep dividing by 2
        }
        
        return n == 1; // If we reach 1, it's a power of two
    }
}
